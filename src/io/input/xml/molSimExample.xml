<?xml version="1.0" encoding="UTF-8"?>
<simulation>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>10</writeFrequency>
    </output>

    <parameters>
        <tEnd>100.0</tEnd>
        <deltaT>0.01</deltaT>
        <cutoff_radius>1.0</cutoff_radius>
    </parameters>

    <Boundary
        typeLEFT="PERIODIC"
        typeRIGHT="REPULSIVE_FORCE"
        typeTOP="OUTFLOW"
        typeBOTTOM="OUTFLOW"
        typeFRONT="REPULSIVE_FORCE"
        typeBACK="OUTFLOW"
        CENTER_BOUNDARY_ORIGINX="0.0"
        CENTER_BOUNDARY_ORIGINY="0.0"
        CENTER_BOUNDARY_ORIGINZ="0.0"
        EXTENT_WIDTH="10.0"
        EXTENT_HEIGHT="10.0"
        EXTENT_DEPTH="10.0"
    />

    <particles>
        <x>0.0</x>
        <y>0.0</y>
        <z>0.0</z>
        <vel1>0.0</vel1>
        <vel2>0.0</vel2>
        <vel3>0.0</vel3>
        <mass>1.0</mass>
    </particles>
    <particles>
        <x>0.0</x>
        <y>0.38</y>
        <z>0.0</z>
        <vel1>-1.59</vel1>
        <vel2>0.0</vel2>
        <vel3>0.0</vel3>
        <mass>1.7e-7</mass>
    </particles>
    <particles>
        <x>0.0</x>
        <y>0.72</y>
        <z>0.0</z>
        <vel1>-1.18</vel1>
        <vel2>0.0</vel2>
        <vel3>0.0</vel3>
        <mass>2.4e-6</mass>
    </particles>

    <Forces>
        <Force type="lennardJones" arg1="1.0" arg2="0.5"/>
    </Forces>

    <cuboids>
        <x>0.0</x>
        <y>1.0</y>
        <z>2.0</z>
        <vel1>0.1</vel1>
        <vel2>0.2</vel2>
        <vel3>0.3</vel3>
        <numPartX>40</numPartX>
        <numPartY>8</numPartY>
        <numPartZ>1</numPartZ>
        <thermal_v>0.5</thermal_v>
        <width>1.0</width>
        <mass>2.0</mass>
        <dimension>3</dimension>
        <type>1</type>
    </cuboids>
</simulation>
