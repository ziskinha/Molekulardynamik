<?xml version="1.0" encoding="UTF-8"?>
<simulation>
    <output>
        <baseName>simulation_output</baseName>
        <writeFrequency>1000</writeFrequency>
    </output>

    <parameters>
        <tEnd> 10 </tEnd>
        <deltaT> 0.00001 </deltaT>
        <cutoff_radius> 1.0 </cutoff_radius>
        <gravitational_force> 9.0 </gravitational_force>
    </parameters>

    <Boundary
        typeLEFT="REPULSIVE_FORCE"
        typeRIGHT="REPULSIVE_FORCE"
        typeTOP="PERIODIC"
        typeBOTTOM="PERIODIC"
        typeFRONT="OUTFLOW"
        typeBACK="OUTFLOW"
        CENTER_BOUNDARY_ORIGINX="0.0"
        CENTER_BOUNDARY_ORIGINY="0.0"
        CENTER_BOUNDARY_ORIGINZ="0.0"
        EXTENT_WIDTH="3"
        EXTENT_HEIGHT="3"
        EXTENT_DEPTH="1"
    />
  
     <particles>
        <x>1</x>
        <y>2</y>
        <z>0.0</z>
        <vel1>2</vel1>
        <vel2>4</vel2>
        <vel3>0</vel3>
        <mass>1.0</mass>
    </particles>

    <particles>
        <x>2</x>
        <y>1</y>                          
        <z>0.0</z>
        <vel1>1</vel1>
        <vel2>-4</vel2>
        <vel3>0</vel3>
        <mass>1</mass>
    </particles>

    <particles>
        <x>1</x>
        <y>1</y>
        <z>0.0</z>
        <vel1>-1.0</vel1>
        <vel2>4</vel2>
        <vel3>0.0</vel3>
        <mass>1</mass>
    </particles> 
    
    <particles>
        <x>2</x>
        <y>2</y>
        <z>0.0</z>
        <vel1>-3</vel1>
        <vel2>-2</vel2>
        <vel3>0.0</vel3>
        <mass>4</mass>
    </particles> 

    <Forces>
        <Force type="lennardJones" arg1="5" arg2="0.1"/>
    </Forces>

    <Thermostat>
        <n_thermostats>10</n_thermostats>
        <init_T>40</init_T>
        <target_T>-1</target_T>
        <temp_dT>-1</temp_dT>
    </Thermostat>

